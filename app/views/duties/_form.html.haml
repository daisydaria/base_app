= form_for @duty do |f|
  - if @duty.errors.any?
    #error_explanation
      %h2= "#{pluralize(@duty.errors.count, "error")} prohibited this duty from being saved:"
      %ul
        - @duty.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :discipline
    = f.text_field :discipline_id
  .field
    = f.label :student
    = f.text_field :student_id
  .field
    = f.label :document
    = f.text_field :document_id
  .field
    = f.label :name
    = f.text_area :name
  .actions
    = f.submit 'Save'
